#--------------------------------------------------------------------
# Example Configuration for RAM Module
#--------------------------------------------------------------------

# Common variables for all resources
common = {
  global           = true
  account_name     = "production"
  region_prefix    = "us-east-1"
  account_name_abr = "prod"
  tags = {
    Environment = "production"
    Project     = "infrastructure"
    Owner       = "devops-team"
    CostCenter  = "12345"
  }
}

# RAM sharing configuration
ram = {
  enabled                   = true
  share_name               = "CrossAccount-Resource-Share"
  allow_external_principals = true
  
  # Example: Sharing Transit Gateway with other accounts
  resource_arns = [
    "arn:aws:ec2:us-east-1:123456789012:transit-gateway/tgw-0123456789abcdef0"
  ]
  
  # List of AWS account IDs to share resources with
  principals = [
    "987654321098",  # Account ID for development environment
    "456789012345"   # Account ID for staging environment
  ]
}

